/* Confirm Dialog */

@import "~/dotfiles/scripts/.config/scripts/rofi/colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Terminus 10";
}

window {
    width:      			320px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @ac;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@ac;
}
