#---------------- COMMANDS --------------

r60() {
    display_ports=$(~/.config/custom_scripts/detect_monitor.sh)

    if [ $display_ports = "eDP-2" ] || [ $display_ports = "eDP-1"]; then
        xrandr -r 60
    fi
}

cdls() {
    cd $1
    ls
}

clearls() {
    clear
    ls
}

# change monitors
switch() {
    display_ports=$(~/.config/custom_scripts/detect_monitor.sh)

    if [ $display_ports = "HDMI-1-1" ]; then
        xrandr --output eDP-2 --auto --output eDP-2 --same-as HDMI-1-1
        sleep 1
        xrandr --output HDMI-1-1 --off
        xrandr -r 60
        SIZE="2560x1600"
    elif [ $display_ports = "eDP-2" ] || [ $display_ports = "eDP-1"]; then
        xrandr --output HDMI-1-1 --auto --output HDMI-1-1 --same-as $display_ports
        sleep 1
        xrandr --output $display_ports --off
        SIZE="1920x1080"
    fi

    killall nitrogen
    sleep 1
    nitrogen --set-centered ~/Backgrounds/${SIZE}barcelona.png
    i3 restart
}

# change alacritty font
f() {
    reset
    ~/.config/custom_scripts/change_alacritty_font.sh $1
}

# i3 resurrection
save() {
    ~/.config/custom_scripts/saveWindow.sh
}

restore() {
    ~/.config/custom_scripts/restoreWindow.sh
}

